body {
  background: #002b36;
  padding:    2em 2em;
  margin:     0;
}

textarea {
  width:       100%;
  height:      100%;
  border:      0; 
  padding:     0 0;
  position:    fixed;
  outline:     none;
  resize:      none;
  font-family: monospace;
  font-size:   16px;
}

@-moz-document url-prefix() {
  textarea {
    height: -2em;
  }
}

pre {
  font-family: monospace;
  font-size:   16px;
}

::-webkit-scrollbar {
  /* this just triggers some bug which causes desired outcome, i.e. no scrollbar put pgup/pgdown work  */
  opacity: 0
}
